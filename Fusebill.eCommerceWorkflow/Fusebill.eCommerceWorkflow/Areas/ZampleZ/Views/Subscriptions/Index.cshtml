                subscriptionComponentDiv.id = "subscriptionComponentDiv" + i;
                subscriptionComponentDiv.setAttribute("class", "collapse col-md-10 col-md-offset-1");
                $("#subscriptionDiv"+i).append(subscriptionComponentDiv);

