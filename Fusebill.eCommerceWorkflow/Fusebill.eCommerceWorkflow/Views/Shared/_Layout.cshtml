<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Subscription.css" rel="stylesheet" />
</head>

<body style="margin-top: -1.6em">
    <div style="width: 100%; height: 5em; margin-top: 2em;">
        <nav>
            <ul style="float:right;">
                <li class="layoutList">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                <li class="layoutList"><a href="http://help.fusebill.com/api-overview" target="_blank">Help</a></li>
                <li class="layoutList">

                    @Html.ActionLink("Samples", "Index", "Samples", new { area = "" }, null)
                </li>
            </ul>
        </nav>
    </div>
    <div>
        <h1 style="margin-left: 20%; font-size: 2.5em; font-weight: 400; color:darkorange">Fusebill Web API</h1>
    </div>  

    <header>
        <div class="content-wrapper">
       
        
        </div>
    </header>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")


    @RenderSection("scripts", required: false)
</body>
</html>
